# Hardware-based performance monitoring interface library for Linux

package(default_visibility = ["//visibility:public"])

# Platform specific copts.
PFM_COPTS_platform = select({
    "@platforms//cpu:x86_64": ["-DCONFIG_PFMLIB_ARCH_X86"],
    "@platforms//cpu:aarch64": ["-DCONFIG_PFMLIB_ARCH_ARM64"],
})

PFM_COPTS = [
    "-D_REENTRANT",
    "-DHAS_OPENAT",
    "-DCONFIG_PFMLIB_DEBUG",
    "-DCONFIG_PFMLIB_PERFMON",
    "-DCONFIG_PFMLIB_OS_LINUX",
    "-Wno-ignored-qualifiers",
] + PFM_COPTS_platform

cc_library(
    name = "pfm4",
    srcs = [
        "lib/events/perf_events.h",
        "lib/pfmlib_common.c",
        "lib/pfmlib_perf_event.c",
        "lib/pfmlib_perf_event_pmu.c",
